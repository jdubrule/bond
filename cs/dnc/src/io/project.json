{
    "name": "Bond.IO",
    "version": "1.0.0-*",
    "buildOptions": {
        "allowUnsafe": true,
        "compile": {
            "include": [
                "../../../src/io/unsafe/*.cs",
                "../../../src/io/properties/*.cs"
            ]
        },
        "debugType": "portable",
        "nowarn": [
            "CS1591"
        ],
        "warningsAsErrors": true,
        "xmlDoc": true
    },
    "configurations": {
        "debug": {
            "buildOptions": {
                "keyFile": "../../../build/internal/bond.snk",
                "optimize": false,
                "publicSign": true
            }
        },
        "debug-delay": {
            "buildOptions": {
                "define": [
                    "DELAY_SIGN"
                ],
                "delaySign": true,
                "keyFile": "../../keys/delay-sign.snk",
                "optimize": true
            }
        },
        "release": {
            "buildOptions": {
                "keyFile": "../../../build/internal/bond.snk",
                "optimize": true,
                "publicSign": true
            }
        },
        "release-delay": {
            "buildOptions": {
                "define": [
                    "DELAY_SIGN"
                ],
                "delaySign": true,
                "keyFile": "../../keys/delay-sign.snk",
                "optimize": true
            }
        }
    },
    "dependencies": {
        "attributes": "1.0.0-*",
        "core": "1.0.0-*",
        "reflection": "1.0.0-*"
    },
    "frameworks": {
        "netstandard1.3": {
            "dependencies": {
                "NETStandard.Library": "1.6.0"
            }
        },
        "netstandard1.6": {
            "dependencies": {
                "NETStandard.Library": "1.6.0"
            }
        }
    }
}
